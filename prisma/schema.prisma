generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  avatarUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  applications Application[]
}

model Application {
  id              String   @id @default(uuid())
  userId          String
  company         String
  position        String
  jobUrl          String?
  location        String?
  status          Status   @default(APPLIED)
  additionalNotes String?
  appliedAt       DateTime @default(now())
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  deletedAt       DateTime?

  user            User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, deletedAt])
  @@index([status])
  @@index([createdAt])
}

enum Status {
  APPLIED
  INTERVIEW
  OFFER
  REJECTED
  WITHDRAWN
  GHOSTED
}